<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.item_price) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) if current_user %></p>
<% end %>
<% if current_user %>
<%= link_to "Cart", cart_path(current_user.current_cart) if current_user.current_cart %>
<% end %>
